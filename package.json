{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Playwright tests for VoiceFriend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test --reporter=line,allure-playwright",
    "test:record": "npx playwright codegen",
    "allureReport": "allure serve",
    "lint": "./node_modules/eslint/bin/eslint.js --quiet ./tests/ ./pages/ ./config/ ./lib/",
    "test:coverage": "c8 --reporter=lcov --reporter=text-summary npx playwright test",
    "coverage:report": "c8 report --reporter=html",
    "coverage:serve": "npx serve coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.56.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^2.15.1",
    "babel-plugin-istanbul": "^7.0.0",
    "c8": "^10.1.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "nyc": "^17.1.0",
    "serve": "^14.2.5"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "axios": "^1.12.2",
    "cross-env": "^7.0.3",
    "googleapis": "^160.0.0",
    "imap": "^0.8.19",
    "imap-simple": "^5.1.0",
    "imapflow": "^1.0.199",
    "jsdom": "^26.1.0",
    "mailparser": "^3.7.5",
    "mailslurp-client": "^15.20.2"
  },
  "c8": {
    "include": [
      "tests/**/*.js",
      "pages/**/*.js",
      "lib/**/*.js"
    ],
    "exclude": [
      "playwright.config.js",
      "playwright-report/**",
      "test-results/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
